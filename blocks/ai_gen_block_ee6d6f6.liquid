{% doc %}
  @prompt
    A magazine-style editorial layout

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-editorial-layout-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: {{ block.settings.section_padding }}px;
    background-color: {{ block.settings.background_color }};
    font-family: {{ block.settings.body_font.family }}, {{ block.settings.body_font.fallback_families }};
    font-weight: {{ block.settings.body_font.weight }};
    line-height: 1.6;
  }

  .ai-editorial-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 60px;
    border-bottom: 1px solid {{ block.settings.accent_color }};
    padding-bottom: 40px;
  }

  .ai-editorial-title-{{ ai_gen_id }} {
    font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }};
    font-weight: {{ block.settings.heading_font.weight }};
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0 0 20px;
    letter-spacing: -0.02em;
  }

  .ai-editorial-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.text_color }};
    opacity: 0.8;
    margin: 0 0 30px;
    font-style: italic;
  }

  .ai-editorial-meta-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 20px;
    font-size: 14px;
    color: {{ block.settings.text_color }};
    opacity: 0.7;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .ai-editorial-meta-divider-{{ ai_gen_id }} {
    width: 1px;
    height: 20px;
    background-color: {{ block.settings.accent_color }};
  }

  .ai-editorial-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 2fr 1fr;
    gap: 40px;
    margin-bottom: 60px;
  }

  .ai-editorial-featured-image-{{ ai_gen_id }} {
    grid-column: 1 / -1;
    margin-bottom: 40px;
  }

  .ai-editorial-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: 16 / 9;
    overflow: hidden;
  }

  .ai-editorial-image-wrapper-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-editorial-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-editorial-image-placeholder-{{ ai_gen_id }} svg {
    width: 100px;
    height: 100px;
    opacity: 0.3;
  }

  .ai-editorial-content-{{ ai_gen_id }} {
    grid-column: 2;
  }

  .ai-editorial-intro-{{ ai_gen_id }} {
    font-size: {{ block.settings.intro_size }}px;
    color: {{ block.settings.text_color }};
    margin-bottom: 30px;
    font-weight: 500;
    line-height: 1.5;
  }

  .ai-editorial-body-{{ ai_gen_id }} {
    font-size: {{ block.settings.body_size }}px;
    color: {{ block.settings.text_color }};
    margin-bottom: 40px;
  }

  .ai-editorial-body-{{ ai_gen_id }} p {
    margin-bottom: 20px;
  }

  .ai-editorial-body-{{ ai_gen_id }} p:first-child::first-letter {
    float: left;
    font-size: 4em;
    line-height: 0.8;
    margin: 8px 8px 0 0;
    font-weight: bold;
    color: {{ block.settings.accent_color }};
  }

  .ai-editorial-sidebar-{{ ai_gen_id }} {
    grid-column: 3;
    padding-left: 20px;
    border-left: 1px solid {{ block.settings.accent_color }};
  }

  .ai-editorial-sidebar-title-{{ ai_gen_id }} {
    font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }};
    font-weight: {{ block.settings.heading_font.weight }};
    font-size: 18px;
    color: {{ block.settings.text_color }};
    margin: 0 0 20px;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .ai-editorial-sidebar-content-{{ ai_gen_id }} {
    font-size: 14px;
    color: {{ block.settings.text_color }};
    opacity: 0.8;
    line-height: 1.5;
  }

  .ai-editorial-quote-{{ ai_gen_id }} {
    background-color: {{ block.settings.quote_bg_color }};
    padding: 40px;
    margin: 40px 0;
    border-left: 4px solid {{ block.settings.accent_color }};
    font-style: italic;
    font-size: {{ block.settings.quote_size }}px;
    color: {{ block.settings.text_color }};
    text-align: center;
  }

  .ai-editorial-quote-text-{{ ai_gen_id }} {
    margin-bottom: 20px;
    font-weight: 300;
  }

  .ai-editorial-quote-author-{{ ai_gen_id }} {
    font-size: 14px;
    font-style: normal;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    opacity: 0.7;
  }

  .ai-editorial-cta-{{ ai_gen_id }} {
    text-align: center;
    margin-top: 60px;
    padding-top: 40px;
    border-top: 1px solid {{ block.settings.accent_color }};
  }

  .ai-editorial-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 15px 40px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    font-size: 16px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    border: 2px solid {{ block.settings.button_color }};
    transition: all 0.3s ease;
  }

  .ai-editorial-button-{{ ai_gen_id }}:hover {
    background-color: transparent;
    color: {{ block.settings.button_color }};
  }

  @media screen and (max-width: 768px) {
    .ai-editorial-layout-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding | times: 0.5 }}px;
    }

    .ai-editorial-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 30px;
    }

    .ai-editorial-content-{{ ai_gen_id }},
    .ai-editorial-sidebar-{{ ai_gen_id }} {
      grid-column: 1;
    }

    .ai-editorial-sidebar-{{ ai_gen_id }} {
      padding-left: 0;
      border-left: none;
      border-top: 1px solid {{ block.settings.accent_color }};
      padding-top: 30px;
    }

    .ai-editorial-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.8 }}px;
    }

    .ai-editorial-meta-{{ ai_gen_id }} {
      flex-direction: column;
      gap: 10px;
    }

    .ai-editorial-meta-divider-{{ ai_gen_id }} {
      width: 20px;
      height: 1px;
    }

    .ai-editorial-body-{{ ai_gen_id }} p:first-child::first-letter {
      font-size: 3em;
    }
  }
{% endstyle %}

<article class="ai-editorial-layout-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <header class="ai-editorial-header-{{ ai_gen_id }}">
    {% if block.settings.title != blank %}
      <h1 class="ai-editorial-title-{{ ai_gen_id }}">{{ block.settings.title }}</h1>
    {% endif %}
    
    {% if block.settings.subtitle != blank %}
      <p class="ai-editorial-subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</p>
    {% endif %}<div class="ai-editorial-meta-{{ ai_gen_id }}">
      {% if block.settings.author != blank %}
        <span>By {{ block.settings.author }}</span>
        <div class="ai-editorial-meta-divider-{{ ai_gen_id }}"></div>
      {% endif %}
      {% if block.settings.date != blank %}
        <time>{{ block.settings.date }}</time>
        <div class="ai-editorial-meta-divider-{{ ai_gen_id }}"></div>
      {% endif %}
      {% if block.settings.reading_time != blank %}
        <span>{{ block.settings.reading_time }} min read</span>
      {% endif %}
    </div>
  </header>

  {% if block.settings.featured_image %}
    <div class="ai-editorial-featured-image-{{ ai_gen_id }}">
      <div class="ai-editorial-image-wrapper-{{ ai_gen_id }}">
        <img
          src="{{ block.settings.featured_image | image_url: width: 1200 }}"
          alt="{{ block.settings.featured_image.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.featured_image.width }}"
          height="{{ block.settings.featured_image.height }}"
        >
      </div>
    </div>
  {% else %}
    <div class="ai-editorial-featured-image-{{ ai_gen_id }}">
      <div class="ai-editorial-image-wrapper-{{ ai_gen_id }}">
        <div class="ai-editorial-image-placeholder-{{ ai_gen_id }}">
          {{ 'hero-apparel-1' | placeholder_svg_tag }}
        </div>
      </div>
    </div>
  {% endif %}

  <div class="ai-editorial-grid-{{ ai_gen_id }}">
    <main class="ai-editorial-content-{{ ai_gen_id }}">
      {% if block.settings.intro_text != blank %}
        <div class="ai-editorial-intro-{{ ai_gen_id }}">
          {{ block.settings.intro_text }}
        </div>
      {% endif %}
      
      {% if block.settings.body_text != blank %}
        <div class="ai-editorial-body-{{ ai_gen_id }}">
          {{ block.settings.body_text }}
        </div>
      {% endif %}
      
      {% if block.settings.quote_text != blank %}
        <blockquote class="ai-editorial-quote-{{ ai_gen_id }}">
          <div class="ai-editorial-quote-text-{{ ai_gen_id }}">
            "{{ block.settings.quote_text }}"
          </div>
          {% if block.settings.quote_author != blank %}
            <cite class="ai-editorial-quote-author-{{ ai_gen_id }}">
              — {{ block.settings.quote_author }}
            </cite>
          {% endif %}
        </blockquote>
      {% endif %}
    </main>

    <aside class="ai-editorial-sidebar-{{ ai_gen_id }}">
      {% if block.settings.sidebar_title != blank %}
        <h3 class="ai-editorial-sidebar-title-{{ ai_gen_id }}">{{ block.settings.sidebar_title }}</h3>
      {% endif %}
      
      {% if block.settings.sidebar_content != blank %}
        <div class="ai-editorial-sidebar-content-{{ ai_gen_id }}">
          {{ block.settings.sidebar_content }}
        </div>
      {% endif %}
    </aside>
  </div>

  {% if block.settings.cta_text != blank %}
    <div class="ai-editorial-cta-{{ ai_gen_id }}">
      <a href="{{ block.settings.cta_link }}" class="ai-editorial-button-{{ ai_gen_id }}">
        {{ block.settings.cta_text }}
      </a>
    </div>
  {% endif %}
</article>

